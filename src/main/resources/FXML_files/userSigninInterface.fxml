<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="750.0" styleClass="left-side-background" stylesheets="@../Values/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.userLoginController">
    <children>
        <!-- Logo -->
        <ImageView fitHeight="93.0" fitWidth="94.0" layoutX="8.0" layoutY="9.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../PiDev_images/Capture_d_écran_2024-02-14_001547-removebg-preview.png" />
            </image>
        </ImageView>
        <!-- Email Label -->
        <Label layoutX="88.0" layoutY="182.0" text="Email" />
        <!-- Email TextField -->
        <TextField fx:id="emailFT" layoutX="87.0" layoutY="204.0" prefHeight="25.0" prefWidth="250.0" promptText="nomprenom@domaine.com" />
        <!-- Password Label -->
        <Label layoutX="89.0" layoutY="243.0" text="Mot de passe" />
        <!-- Password TextField -->
        <PasswordField fx:id="passwordFT" layoutX="87.0" layoutY="263.0" prefHeight="25.0" prefWidth="250.0" promptText="**********" />
        <!-- Sign Up Link -->
        <Hyperlink layoutX="244.0" layoutY="14.0" onAction="#SignUp" text="Vous n'avez pas de compte ? S'inscrire" />
        <!-- Sign In Button -->
        <Button fx:id="LoginFT" layoutX="151.0" layoutY="311.0" mnemonicParsing="false" onAction="#LogInAction" prefHeight="37.0" prefWidth="122.0" styleClass="custom-button" stylesheets="@../Values/style.css" text="Se connecter" />
      <Label layoutX="87.0" layoutY="89.0" prefHeight="64.0" prefWidth="267.0" text="Se connecter" textFill="#4c3627">
         <font>
            <Font name="Andalus" size="48.0" />
         </font>
      </Label>
        <ImageView fitHeight="455.0" fitWidth="285.0" layoutX="499.0" layoutY="-2.0" nodeOrientation="RIGHT_TO_LEFT" opacity="0.71" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../PiDev_images/FondDÉcranArt.jpg" />
            </image>
         <effect>
            <MotionBlur angle="110.12" radius="5.55" />
         </effect>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
        </ImageView>
      <Hyperlink layoutX="325.0" layoutY="409.0" text="Vous avez des problèmes ?" />
      <Hyperlink layoutX="26.0" layoutY="409.0" onAction="#pwdOublier" text="Mot de passe oublié?" />

    </children>
</AnchorPane>
